<configuration>

  <!-- Console Appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Set the default log level to INFO -->
  <root level="INFO">
    <appender-ref ref="CONSOLE" />
  </root>

  <!-- Override log levels for specific packages or classes -->
  <!-- <logger name="com.theproductcollectiveco" level="DEBUG" /> -->
  <logger name="com.theproductcollectiveco.Metrics" level="INFO" />

</configuration>